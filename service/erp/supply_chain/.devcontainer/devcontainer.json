{
	"name": "frepple development on Ubuntu 20",
	"image": "mcr.microsoft.com/devcontainers/base:focal",
	"features": {},
	// Features to add to the dev container. More info: https://containers.dev/implementors/features.
	// "features": {},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		8000
	],
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "sudo apt-get -y -q update && DEBIAN_FRONTEND=noninteractive sudo apt-get -y install cmake g++ git python3 python3-pip python3-dev python3-venv psmisc libxerces-c3.2 libxerces-c-dev openssl libssl-dev postgresql-client libpq5 libpq-dev locales gdb",
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.cpptools-themes",
				"ms-vscode.cpptools-extension-pack"
			],
			"settings": {
				"telemetry.telemetryLevel": "off"
			}
		}
	},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}