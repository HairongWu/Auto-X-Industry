<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:primitive="urn:import:edu.stanford.bmir.protege.web.client.primitive">
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <g:HTMLPanel addStyleNames="{wp.style.form}">
        <g:Label text="New parent" addStyleNames="{wp.style.formLabel}"/>
        <g:SimplePanel ui:field="hierarchyFieldContainer"/>
        <g:Label text="Specify the class that should be the new parent.  The selected classes will be move from
        their current parent to this new parent." addStyleNames="{wp.style.formHelpText}"/>
    </g:HTMLPanel>
</ui:UiBinder>