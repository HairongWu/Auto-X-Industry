<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:style>
        @external .gwt-TabBar;
        @external .gwt-TabBarItem;
        @external .gwt-TabBarItem-selected;
        .main {
            display: flex;
            flex-direction: column;
            align-items: stretch;
            box-sizing: border-box;
        }
        .tabBar {
            background-color: literal("var(--alternate--background-color)");
            padding-bottom: 2px;
            padding-top: 1px;
        }
        .tagListContainer {
            padding-top: 2px;
            padding-right: 2px;
            padding-left: 2px;
            flex-grow: 0;
            flex-shrink: 0;
        }
        .container {
            position: relative;
            flex-grow: 1;
            flex-shrink: 1;
            box-sizing: border-box;
            overflow: scroll;
        }
        .main .gwt-TabBar {

        }
        .main .gwt-TabBarItem {
            font-weight: 400;
            cursor: pointer;
            text-align: center;
            border-bottom: 2px solid transparent;
            outline: none;
            margin-right: 10px;

        }
        .main .gwt-TabBarItem-selected {
            border-bottom: 2px solid literal("var(--selected-tab--color)");
        }
        .main .gwt-TabBarItem-selected div {
            background-color: literal("var(--selected-tab--color)");
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main}">
        <g:TabBar ui:field="tabBar" addStyleNames="{style.tabBar} {wp.toolbar.toolbar}"/>
        <g:SimplePanel ui:field="tagListViewContainer" addStyleNames="{style.tagListContainer}"/>
        <g:HTMLPanel ui:field="paneContainer" addStyleNames="{style.container}"/>
    </g:HTMLPanel>
</ui:UiBinder>
