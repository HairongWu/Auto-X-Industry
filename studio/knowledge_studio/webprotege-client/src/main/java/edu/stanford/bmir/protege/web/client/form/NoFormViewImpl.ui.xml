<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .holder {
            display: flex;
            flex-direction: column;
            justify-content: center;
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
        }
        .message {
            text-align: center;
            color: literal("var(--placeholder--color)");
            font-size: 20px;
        }
    </ui:style>
    <g:HTMLPanel>
        <g:HTMLPanel addStyleNames="{style.holder}">
            <g:Label text="No form to display" addStyleNames="{style.message}"/>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>
