<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:primitive="urn:import:edu.stanford.bmir.protege.web.client.primitive">
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:style>
        .main {
            display: flex;
            flex-direction: column;
        }
        .editor {
            display: flex;
            flex-direction: row;
            min-width: 0;
        }
        .value-field {
            flex-grow: 1;
            min-width: 0;
        }
        .language-field {
            flex-grow: 0;
            max-width: 40px;
        }
        .main textarea {
            border-left: 1px solid transparent;
            border-right: 1px solid transparent;
            border-top: 1px solid transparent;
            border-bottom: 1px solid transparent;
        }
        .main input {
            border-left: 1px solid transparent;
            border-right: 1px solid transparent;
            border-top: 1px solid transparent;
            border-bottom: 1px solid transparent;
        }
        .patternViolationMessage {
            padding-top: 0.3em;
            max-width: 120px;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main}">
        <g:HTMLPanel addStyleNames="{style.editor}">
            <primitive:PrimitiveDataEditorImpl ui:field="editor" addStyleNames="{style.value-field}"/>
            <primitive:DefaultLanguageEditor placeholder="lang" ui:field="languageEditor"
                                             addStyleNames="{style.language-field}"/>
        </g:HTMLPanel>
        <g:Label ui:field="patternViolationErrorMessageLabel" visible="false" addStyleNames="{wp.style.errorLabel} {style.patternViolationMessage}"/>
    </g:HTMLPanel>
</ui:UiBinder>
