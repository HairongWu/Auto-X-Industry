<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .main {
            height: 22px;
            cursor: pointer;
            vertical-align: middle;
        }
        .main:hover {
            background-color: literal("var(--item--hover--background-color)");
        }
        .label {
            display: flex;
            align-items: center;
            height: 22px;
        }
    </ui:style>
    <g:HTMLPanel ui:field="outer" addStyleNames="{style.main}">
        <g:Label ui:field="displayNameField" addStyleNames="{style.label}"/>
    </g:HTMLPanel>
</ui:UiBinder>