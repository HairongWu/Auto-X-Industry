<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:with field="msg" type="edu.stanford.bmir.protege.web.client.Messages"/>
    <g:HTMLPanel>
        <g:HTMLPanel addStyleNames="{wp.style.formGroup}">
            <g:HTMLPanel>
                <g:Button ui:field="resetPerspectivesButton" text="{msg.perspective_reset}" addStyleNames="{wp.buttons.smallPageButton} {wp.buttons.secondaryButton}"/>
            </g:HTMLPanel>
        </g:HTMLPanel>
        <g:SimplePanel ui:field="container"/>
    </g:HTMLPanel>
</ui:UiBinder>