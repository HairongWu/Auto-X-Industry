<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .main {
            display: flex;
            flex-direction: row;
            align-items: baseline;
        }
        .renderingField {
            flex-grow: 1;
            flex-shrink: 1;
            min-width: 20px;
            overflow: hidden;
            margin-right: 1em;
        }
        .languageField {
            /*color: literal("var(--tertiary--color)");*/
            flex-grow: 0;
            flex-shrink: 0;
            flex-basis: 90px;
            text-align: right;
            white-space: nowrap;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main}">
        <g:HTML ui:field="renderingField" addStyleNames="{style.renderingField}"/>
        <g:Label ui:field="languageField" addStyleNames="{style.languageField}"/>
    </g:HTMLPanel>
</ui:UiBinder>