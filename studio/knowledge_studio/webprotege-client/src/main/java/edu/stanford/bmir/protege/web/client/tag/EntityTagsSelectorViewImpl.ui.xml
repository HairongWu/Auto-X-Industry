<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .checkBoxesContainer {
            padding-top: 10px;
            padding-bottom: 10px;
            max-height: 20em;
            overflow: hidden ;
            overflow-y: auto;
        }
        .checkBoxesContainer div+div {
            margin-top: 5px;
            padding-top: 5px;
            border-top: 1px solid literal("var(--separator--color)");
        }
    </ui:style>
    <g:HTMLPanel>
        <g:Label text="Select the tags that you want to give to this entity"/>
        <g:HTMLPanel ui:field="container" addStyleNames="{style.checkBoxesContainer}"/>
    </g:HTMLPanel>
</ui:UiBinder>