{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strictFunctionTypes": false,
        "lib": ["esnext","dom"],
        "paths": {
            "@": ["src"],
            "@/*": ["src/*"],
            "image-editor": ["src/package/image-editor"],
            "image-editor/*": ["src/package/image-editor/*"],
            "image-ui/*": ["src/package/image-ui/*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}