<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .main {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
        }
        .center {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            box-sizing: border-box;
            overflow: hidden;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main}">
        <g:SimpleLayoutPanel ui:field="mainView" addStyleNames="{style.center}"/>
    </g:HTMLPanel>
</ui:UiBinder>