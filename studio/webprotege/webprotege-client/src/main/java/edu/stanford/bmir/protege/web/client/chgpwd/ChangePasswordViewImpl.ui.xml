<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>

    <g:HTMLPanel addStyleNames="{wp.style.form}">

        <g:HTMLPanel addStyleNames="{wp.style.formGroup}">
            <g:Label addStyleNames="{wp.style.formLabel}">Current password</g:Label>
            <g:PasswordTextBox ui:field="oldPasswordField" visibleLength="60"/>
        </g:HTMLPanel>

        <g:HTMLPanel addStyleNames="{wp.style.formGroup}">
            <g:Label addStyleNames="{wp.style.formLabel}">New password</g:Label>
            <g:PasswordTextBox ui:field="newPasswordField" visibleLength="60"/>
        </g:HTMLPanel>

        <g:HTMLPanel addStyleNames="{wp.style.formGroup}">
            <g:Label addStyleNames="{wp.style.formLabel}">Confirm new password</g:Label>
            <g:PasswordTextBox ui:field="confirmNewPasswordField" visibleLength="60"/>
        </g:HTMLPanel>

    </g:HTMLPanel>
</ui:UiBinder>
