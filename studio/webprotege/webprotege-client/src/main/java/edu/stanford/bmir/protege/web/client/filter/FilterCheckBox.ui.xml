<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .main {
            padding: 1x;
            padding-right: 5px;
            padding-left: 10px;
            white-space: nowrap;
        }
        .main:hover {
            background-color: literal("var(--item--hover--background-color)");
        }
        .checkBox input {
            padding-right: 4px;
        }
        .checkBox label {
            padding-left: 5px;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main}">
        <g:CheckBox ui:field="checkBox" addStyleNames="{style.checkBox}"/>
    </g:HTMLPanel>
</ui:UiBinder>
