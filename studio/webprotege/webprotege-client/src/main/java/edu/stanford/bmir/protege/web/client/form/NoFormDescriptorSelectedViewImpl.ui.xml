<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="msg" type="edu.stanford.bmir.protege.web.client.FormsMessages"/>
    <ui:style>
        .holder {
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        .message {
            text-align: center;
            color: literal("var(--placeholder--color)");
            font-size: 20px;
        }
    </ui:style>
    <g:HTMLPanel>
        <g:HTMLPanel addStyleNames="{style.holder}">
            <g:Label text="{msg.noFormSelected}" addStyleNames="{style.message}"/>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>
