<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        @external gwt-RadioButton;

        .radioButtonContainer {
            padding: 2px;
        }
        .radioButtonContainer .gwt-RadioButton {
            margin: 0;
            padding: 1px;
            display: flex;
            flex-direction: row;
        }
        .radioButtonContainer .gwt-RadioButton input {
            flex-grow: 0;
            flex-shrink: 0;
        }
    </ui:style>
    <g:HTMLPanel ui:field="container" addStyleNames="{style.radioButtonContainer}">

    </g:HTMLPanel>
</ui:UiBinder>
