<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .focusPanelBorder {
            border: 1px solid transparent;
            box-sizing: border-box;
        }
        .segmentContainer {
            display: flex;
            border: 1px solid #e0e0e0;
            border-radius: 3px;
            flex-direction: row;
            overflow: hidden;
        }
        .segmentContainer span {
            padding: 3px;
            cursor: pointer;
            display: inline-block;
            flex-grow: 1;
            flex-basis: 0;
            text-align: center;
        }
        .segmentContainer span:hover {
            background-color: #f0f0f0;
        }
        .segmentContainer span+span {
            border-left: 1px solid #e0e0e0;
        }
    </ui:style>
    <g:HTMLPanel>
        <g:FocusPanel ui:field="focusPanel" addStyleNames="{style.focusPanelBorder}">
            <g:HTMLPanel ui:field="segmentContainer" addStyleNames="{style.segmentContainer}"/>
        </g:FocusPanel>
    </g:HTMLPanel>
</ui:UiBinder>