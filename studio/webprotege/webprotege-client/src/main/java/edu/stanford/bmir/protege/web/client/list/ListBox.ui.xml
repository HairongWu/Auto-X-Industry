<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .listBox {
            user-select: none;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            display: flex;
        }
        .focusPanel {
            flex-grow: 1;
            flex-shrink: 1;
            align-items: stretch;
            margin: 1px;
            overflow: auto;
        }
        .contentHolder {
            display: flex;
            flex-direction: column;
            align-items: stretch;
            background-color: literal("var(--list--background-color)");
        }
        .contentHolder > * {
            cursor: default;
        }

    </ui:style>
    <g:HTMLPanel addStyleNames="{style.listBox}">
        <g:FocusPanel ui:field="focusPanel" addStyleNames="{style.focusPanel}">
            <g:FlowPanel ui:field="contentHolder" addStyleNames="{style.contentHolder}"/>
        </g:FocusPanel>
    </g:HTMLPanel>
</ui:UiBinder>
