<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>

    <g:HTMLPanel addStyleNames="{wp.style.form}">
        <g:HTMLPanel addStyleNames="{wp.style.formGroup}">
            <g:Label text="Email address" addStyleNames="{wp.style.formLabel}"/>
            <g:TextBox ui:field="emailAddressField" visibleLength="60"/>
        </g:HTMLPanel>

        <g:HTMLPanel addStyleNames="{wp.style.formGroup}">
            <g:Label text="Confirm email address" addStyleNames="{wp.style.formLabel}"/>
            <g:TextBox ui:field="confirmEmailAddressField" visibleLength="60"/>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>
