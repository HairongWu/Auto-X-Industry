<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:button="urn:import:edu.stanford.bmir.protege.web.client.library.button">
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:style>
        @external .gwt-SuggestBox;
        .main {
            display: flex;
            align-items: baseline;
            justify-content: space-between;
            flex-direction: row;
            margin-bottom: 2px;
            padding: 2px;
            flex-grow: 1;
            flex-shrink: 1;
            overflow-x: hidden;
        }
        .main .gwt-SuggestBox {
        }
        .buttonContainer {
            display: flex;
            align-items: baseline;
            flex-grow: 1;
            flex-shrink: 1;
            padding-left: 20px;
            padding-right: 10px;
            justify-content: flex-end;
            align-self: start;
            margin-top: 3px;
        }
        .deleteButton {
            visibility: hidden;
            justify-self: end;
            flex-grow: 0;
            flex-shrink: 0;
        }
        .viewContainer {
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main} {wp.style.panelFilled}">
        <g:SimplePanel ui:field="viewContainer" addStyleNames="{style.viewContainer}"/>
        <g:HTMLPanel addStyleNames="{style.buttonContainer}">
            <button:DeleteButton ui:field="removeButton" addStyleNames="{style.deleteButton}"/>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>