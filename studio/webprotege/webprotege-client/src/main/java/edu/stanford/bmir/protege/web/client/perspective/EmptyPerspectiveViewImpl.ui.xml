<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .main {
            position: absolute;
            width: 100%;
            height: 100%;
            box-sizing: border-box;
            cursor: pointer;
        }
        .content {
            position: absolute;
            margin: 20px;
            padding: 20px;
            border: dashed #d5d5d5 6px;
            border-radius: 40px;
            left: 0;
            right: 0;
            top: 0;
            bottom: 0;
            box-sizing: border-box;
        }
        .label {
            position: absolute;
            vertical-align: middle;
            text-align: center;
            color: #b5b5b5;
            font-size: 25px;
            font-weight: bolder;
            left: 0;
            right: 0;
            top: 45%;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main}">
        <g:HTMLPanel addStyleNames="{style.content}">
            <g:HTMLPanel ui:field="hasText" addStyleNames="{style.label}">
                Empty<br/>
                <div style="font-weight: 200; padding-top: 20px;">
                    Click to add content
                </div>

            </g:HTMLPanel>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>