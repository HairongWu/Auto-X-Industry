<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .main {
            display: flex;
            flex-direction: row;
            align-items: baseline;
            padding-bottom: 0.8em;
        }
        .comboBox {
            flex-shrink: 0;
            flex-grow: 0;
        }
        .container {
            flex-grow: 1;
            flex-shrink: 1;
            flex-basis: 200px;
            padding-left: 0.3em;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main}">
        <g:ListBox visibleItemCount="1" ui:field="languageTypeNamesComboBox" addStyleNames="{style.comboBox}"/>
        <g:SimplePanel ui:field="container" addStyleNames="{style.container}"/>
    </g:HTMLPanel>
</ui:UiBinder>