<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .main {
            padding-left: 30px;
        }

        .radioButton {
            padding: 3px;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main}">
        <g:RadioButton name="watchType" ui:field="none" text="None" addStyleNames="{style.radioButton}"/>
        <g:RadioButton name="watchType" ui:field="entity" text="Entity" addStyleNames="{style.radioButton}"/>
        <g:RadioButton name="watchType" ui:field="branch" text="Branch" addStyleNames="{style.radioButton}"/>
    </g:HTMLPanel>
</ui:UiBinder>